# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=book_management

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=86400  # 1 day in seconds

# JWT
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRES_IN=3d
JWT_ISSUER=book_manager
JWT_AUDIENCE=book_manager_client 

# Swagger
SWAGGER_TITLE=Book Manager API
SWAGGER_DESCRIPTION=Book Manager API Documentation
SWAGGER_VERSION=1.0.0
SWAGGER_PATH=/api

# Logging
# Available levels: error, warn, log, debug, verbose
LOG_LEVEL=debug
# Maximum size of each log file (e.g., 20m, 1g)
LOG_FILE_MAX_SIZE=20m
# How long to keep log files (e.g., 14d, 30d, 1m)
LOG_MAX_FILES=14d
# Directory where log files will be stored
LOG_DIRECTORY=logs
# Console output log level (can be different from file log level)
LOG_CONSOLE_LEVEL=debug 